FROM python:3.11-slim

WORKDIR /app

RUN apt-get update && apt-get install -y ffmpeg && rm -rf /var/lib/apt/lists/*

COPY services/training-orchestrator/requirements.txt /tmp/req.txt
RUN pip install --no-cache-dir -r /tmp/req.txt

# Bring the whole repo to access training/*
COPY . .

EXPOSE 8100

CMD ["python", "services/training-orchestrator/app.py"]

